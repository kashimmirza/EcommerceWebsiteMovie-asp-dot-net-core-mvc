@*define models*@

@model IEnumerable<Cinema>

@{
    ViewData["Title"] = "List of Cinemas";
}
<div class=" = " row">
    <div class=" col-md-8 offset-md-2">
        <table class=" table">
            <theadd>
                <tr class="text-center">
                    <th>
                        @Html.DisplayNameFor(model => model.Logo)

                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)

                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Description)

                    </th>
                    <th>
                        Actions

                    </th>
                </tr>
            </theadd>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class=" align-middle">
                            <img class="rounded-circle" src="@item.Logo" alt="@item.Name" style="max-width:150px" />
                        </td>
                        <td class=" align-middle">
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td class="align-middle">
                            @Html.DisplayFor(modelItem => item.Description)
                        </td>
                        <td class="align-middle">
                            <div class="d-flex justify-content-around">
                                <a class="btn btn-outline-primary mr-2"><i class="bi bi-pencil-square"></i>Edit </a>
                                <a class="btn btn-outline-info mr-2"><i class="bi bi-eye"></i>Details </a>
                                <a class="btn btn-danger"><i class="bi bi-trash"></i>Delete </a>
                            </div>
                        </td>

                    </tr>
                }
            </tbody>

        </table>
    </div>
</div>
